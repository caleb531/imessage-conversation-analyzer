{
  "$schema": "https://schema.tauri.app/config/2",
  "productName": "iMessage Conversation Analyzer",
  "version": "0.1.0",
  "identifier": "com.calebevans.imessage-conversation-analyzer",
  "build": {
    "beforeDevCommand": "vite dev",
    "devUrl": "http://localhost:1420",
    "beforeBuildCommand": "vite build",
    "frontendDist": "../build"
  },
  "app": {
    "windows": [
      {
        "title": "iMessage Conversation Analyzer",
        "width": 1024,
        "height": 768
      }
    ],
    "security": {
      "csp": null
    }
  },
  "plugins": {},
  "bundle": {
    "active": true,
    "targets": ["app"],
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ],
    "externalBin": [
      "bin/ica-sidecar"
    ],
    "resources": ["_internal"]
  }
}
